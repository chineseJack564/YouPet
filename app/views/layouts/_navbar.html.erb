
<% if current_user %>
    <% dark = current_user.darkmode? ? 'dark-own' : '' %>
<% end %>


<!-- Header Section Start -->
<div class="header section">

    <!-- Header Top Start -->
    <div class="header-top bg-name-primary <%= dark %>">
        <div class="container">
            <div class="row align-items-center">

                <!-- Header Top Message Start -->
                <div class="col-12 col-lg-6">
                    <div class="header-top-msg-wrapper">
                        <p class="header-top-message">Welcome to YouPet!</p>
                    </div>
                </div>
                <!-- Header Top Message End -->

            </div>
        </div>
    </div>
    <!-- Header Top End -->

    <!-- Header Bottom Start -->
    <div class="header-bottom">
        <div class="header-sticky <%= dark %>">
            <div class="container">
                <div class="row align-items-center position-relative">

                    <!-- Header Logo Start -->
                    <div class="col-lg-3 col-md-4 col-6">
                        <div class="header-logo">
                            <%= link_to home_path do %>
                                <% if current_user %>
                                    <% if dark == '' %>
                                        <%= image_tag("logolight.png", class: 'lightmode_logo', style: "display: none;") %>
                                        <%= image_tag("logo.png", class: 'darkmode_logo', style: "display: block;") %>
                                    <% else %>
                                        <!-- Arregla las dimensiones del logo -->
                                        <%= image_tag("logolight.png", class: 'lightmode_logo', style: "display: block;") %>
                                        <%= image_tag("logo.png", class: 'darkmode_logo', style: "display: none;") %>
                                    <% end %>   
                                <% else %>
                                    <%= image_tag("logolight.png", class: 'lightmode_logo', style: "display: none;") %>
                                    <%= image_tag("logo.png", class: 'darkmode_logo', style: "display: block;") %>
                                <% end %>
                            <% end %>
                        </div>
                    </div>
                    <!-- Header Logo End -->

                    <!-- Header Menu Start -->
                    <div class="col-lg-6 d-none d-lg-block">
                        <div class="main-menu">
                            <ul>
                                <li class="has-children" data-turbolinks="false">
                                    <%= link_to 'Home', home_path %>
                                </li>
                                <li class="has-children">
                                     <%= link_to  "Posts",  posts_path %>
                                    <ul class="sub-menu bg-name-main <%= dark %>">
                                        <li><%= link_to  "All Posts",  posts_path %></li>
                                        <% if current_user %>
                                            <li><%= link_to  "Create",  new_post_path %></li>
                                            <li><%= link_to  "Manege my posts",  users_show_path(current_user) %></li>
                                        <% end %>
                                    </ul>
                                </li>
                                <li class="has-children">
                                     <%= link_to  "Animals",  posts_path %>
                                    <ul class="sub-menu bg-name-main <%= dark %>">
                                        <li><a href="/posts?utf8=✓&q%5Bspecie_eq%5D=0&commit=Apply+filter">Dog</a></li>
                                        <li><a href="/posts?utf8=✓&q%5Bspecie_eq%5D=1&commit=Apply+filter">Cat</a></li>
                                        <li><a href="/posts?utf8=✓&q%5Bspecie_eq%5D=2&commit=Apply+filter">Hamster</a></li>
                                        <li><a href="/posts?utf8=✓&q%5Bspecie_eq%5D=3&commit=Apply+filter">Bird</a></li>
                                        <li><a href="/posts?utf8=✓&q%5Bspecie_eq%5D=4&commit=Apply+filter">Fish</a></li>
                                        <li><a href="/posts?utf8=✓&q%5Bspecie_eq%5D=5&commit=Apply+filter">Rabbit</a></li>
                                        <li><a href="/posts?utf8=✓&q%5Bspecie_eq%5D=6&commit=Apply+filter">Other</a></li>
                                    </ul>
                                </li>
                        </div>
                    </div>
                    <!-- Header Menu End -->

                    <!-- Header Action Start -->
                    <div class="col-lg-3 col-md-8 col-6">
                        <div class="header-actions">

                            <!-- Header Action Search Button Start -->
                            <%# <div class="header-action-btn header-action-btn-search d-none d-md-flex">
                                <div class="action-execute">
                                    <a class="action-search-open" href="javascript:void(0)"><i class="icon-magnifier icons"></i></a>
                                    <a class="action-search-close" href="javascript:void(0)"><i class="ti-close"></i></a>
                                </div>
                                <!-- Search Form and Button Start -->
                                <form class="header-search-form" action="#">
                                    <input type="text" class="header-search-input" placeholder="Search Our Store">
                                    <button class="header-search-button"><i class="icon-magnifier icons"></i></button>
                                </form>
                                <!-- Search Form and Button End -->
                            </div> %>
                            <!-- Header Action Search Button End -->

                            <!-- Header Action Account Start -->
                            <div class="header-action-btn header-action-btn-cart d-none d-sm-flex">
                                <a class="nav-icon-container-own account-own" href="javascript:void(0)" tag=account >
                                    <i class="fas fa-user nav-icon"></i>
                                </a>
                            </div>
                            <!-- Header Action Account End -->

                            <!-- Header Action Messages Start -->
                            <div class="header-action-btn header-action-btn-cart d-none d-sm-flex">
                                <a class="nav-icon-container-own messages-own" href="javascript:void(0)" tag=messages >
                                    <i class="fas fa-envelope nav-icon"></i>
                                    <% if current_user %>
                                        <span class="header-action-num" num=messages user=<%= current_user.id %> style='background-color: <%= 'transparent' if current_user.unread_messages == 0 %>;'>
                                            <%= current_user.unread_messages == 0 ? '' : current_user.unread_messages %>
                                        </span>
                                    <% end %>
                                </a>
                            </div>
                            <!-- Header Action Messages End -->

                            <!-- Header Action Notification Start -->
                            <div class="header-action-btn header-action-btn-cart d-none d-sm-flex">
                                <a class="nav-icon-container-own notifications-own" href="javascript:void(0)" tag=notifications >
                                    <i class="fas fa-bell nav-icon"></i>
                                    <% if current_user %>
                                        <span class="header-action-num" num=notifications user=<%= current_user.id %> style='background-color: <%= 'transparent' if current_user.unread_notifications == 0 %>;'>
                                            <%= current_user.unread_notifications == 0 ? '' : current_user.unread_notifications %>
                                        </span>                    
                                    <% end %>
                                </a>
                            </div>
                            <!-- Header Action Notification End -->

                            <!-- Mobile Menu Hamburger Action Button Start -->
                            <a href="javascript:void(0)" class="header-action-btn header-action-btn-menu d-lg-none d-md-flex bg-name-text <%= dark %>">
                                <i class="fas fa-bars"></i>
                            </a>
                            <!-- Mobile Menu Hambarger Action Button End -->

                        </div>
                    </div>
                    <!-- Header Action End -->

                </div>
            </div>
        </div>
    </div>
    <!-- Header Bottom End -->

</div>
<!-- Header Section End -->

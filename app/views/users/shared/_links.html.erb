<%- if controller_name != 'sessions' %>
<div class="container d-flex flex-column justify-content-center align-items-center">
    <div class="row">
      <div class="col-12 d-flex justify-content-center">
      <p class="mt-2 mb-2 p-register">Already have an account?</p>
      </div>
    </div>
  <div class="row">
    <div class="col-12 d-flex justify-content-center ">
      <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-secondary align-self-center"%>
    </div>
  </div> 
</div>
<% end %>




<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="row justify-content-center mt-3">
      <div class="col-12 d-flex justify-content-center p-register">
      <p class="mt-2 mb-2">Haven't got an account?</p>
      </div>
  </div>
  <div class="row"><div class="col-12 d-flex justify-content-center"><%= link_to "Sign Me up !", new_registration_path(resource_name), class: "btn btn-secondary"%></div></div>
   
<% end %>



<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end %>
<% end %>

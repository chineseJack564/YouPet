<%# info sec strat %>
<div class="section breadcrumb-area bg-name-bright">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <div class="breadcrumb-wrapper">
                    <h2 class="breadcrumb-title">User Login</h2>
                    <ul class="align-items-end">
                        <li><%= link_to 'Home', root_path%></li>
                        <li>User Login</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<%# info sec end %>
<!-- Login Section Start -->
<div class="section section-margin">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-8 m-auto">
                <div class="login-wrapper">
                  <%# title %>
                  <div class="section-content text-center m-b-30">
                      <h2 class="title m-b-10">Login</h2>
                  </div>
                  <%# title end %>
                  <%# pic start %>
                  <div class="col-12 mb-5 d-flex justify-content-center">
                    <img src="/user.png"  class="user-img2">
                  </div>
                  <%# pic end %>
                  <%# form start %>
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <form class="col-12">
                      <div class="mb-3 d-flex justify-content-center">
                          <span class="input-group-text" id="addon-wrapping"><i class="fas fa-envelope-open"></i></span>
                          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "email"%>
                      </div>
                      <div class="mb-3 d-flex justify-content-center">
                            <span class="input-group-text" id="addon-wrapping"><i class="fas fa-lock"></i></span>
                            <%= f.password_field :password, class: "form-control", autocomplete: "current-password", placeholder: "password" %>
                      </div>
                      <div class="row">
                        <% if devise_mapping.rememberable? %>
                            <div class="col-6">
                              <div class="form-check">
                              <%= f.check_box :remember_me , class: "form-check-input"%>
                              <p>Remember me?</p>
                              </div>
                            </div>

                            <div class="col-6 d-flex justify-content-end">
                            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                              <%= link_to "Forgot your password?", new_password_path(resource_name) , class: "login-link-buffer"%><br />
                            <% end %>
                            </div>
                        <% end %>
                      </div>
                      <div class="col-12 d-flex justify-content-center">
                        <%= f.submit "Login", class: "btn btn-primary btn-lg user-bt-buffer"%>
                      </div>
                    </form>
                  <% end %>
                  <%# form end %>
                  <%= render "users/shared/links" %>
                  <div class="col-12 d-flex justify-content-center">
                    <%= link_to '<i class="fas fa-id-card"></i> Admin Log In'.html_safe, admin_root_path, class: "btn admin-btn"%>
                  </div>
                </div>
            </div>
        </div>  
    </div>  
</div>  


      

    


    
<% if current_user %>
    <% dark = current_user.darkmode? ? 'dark-own' : '' %>
<% end %>

<!-- Breadcrumb Area Start -->
<div class="section breadcrumb-area bg-name-bright <%=dark%>">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center bg-name-text <%=dark%>">
                <div class="breadcrumb-wrapper">
                    <h2 class="breadcrumb-title">Edit Account</h2>
                    <ul class="align-items-end">
                        <li><%= link_to 'Home', root_path%></li>
                        <li>Edit account</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Area End -->
<!-- Edit Section Start -->
<div class="section section-margin">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-8 m-auto">
                <div class="login-wrapper bg-name-text <%=dark%>">
                <%# title %>
                    <div class="section-content text-center m-b-30">
                        <h2 class="title m-b-10">Edit account</h2>
                    </div>
                <%# form %>
                     <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                        <%= render "users/shared/error_messages", resource: resource %>
                        <div class="mb-3">
                            <label  class="form-label">username</label>
                            <%= f.text_field :username, class: "form-control bg-name-bright bg-name-text #{dark}", autofocus: true, autocomplete: "username"%>
                        </div>
                        <div class="mb-3">
                          <label class="form-label">avatar</label>
                          <%= f.file_field :avatar, class: "form-control  bg-name-bright bg-name-text #{dark}", autocomplete: "avatar" %>
                          <% if resource.avatar.attached? %>
                            <%= image_tag resource.avatar, class: "avatar" %>
                          <% end %>
                        </div>
                        <div class= "row">
                          <div class="mb-3 col-md-7">
                            <label class="form-label">email</label>
                            <%= f.email_field :email, class: "form-control  bg-name-bright bg-name-text #{dark}", autocomplete: "email" %>
                          </div>
                          <div class="mb-3 col-md-5">
                            <label class="form-label">phone</label>
                            <%= f.phone_field :phone, class: "form-control  bg-name-bright bg-name-text #{dark}", autocomplete: "phone" %>
                          </div>
                        </div>
                        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                        <% end %>
                        <div class="mb-3">
                          <label class="form-label">password </label>
                          <% if @minimum_password_length %>
                          <em>(<%= @minimum_password_length %> characters minimum)</em>
                          <% end %><br />
                          <%= f.password_field :password,  class: "form-control  bg-name-bright bg-name-text #{dark}", autocomplete: "new-password", placeholder: "leave blank if you don't want to change it" %>
                          </div>
                        <div class="mb-3">
                          <label class="form-label">password confirmation</label>
                          <%= f.password_field :password_confirmation,  class: "form-control  bg-name-bright bg-name-text #{dark}", autocomplete: "new-password" %>
                        </div>
                        <div class="mb-3">
                          <label class="form-label">current password</label>
                          <%= f.password_field :current_password,  class: "form-control  bg-name-bright bg-name-text #{dark}", autocomplete: "new-password", placeholder: "... to confirm your changes" %>
                        </div>
                        <div class="mb-3">
                          <div class="row">
                            <div class="col-12 d-flex justify-content-center align-item-center">
                              <%= f.submit "Update", class: "btn btn-primary btn-lg user-bt-buffer"%>
                            </div>
                          </div>
                        </div>
                        <% end %>
                        <div class="mb-3 d-flex justify-content-center">
                            <%= button_to "Cancel my account", registration_path(resource_name), class: "btn btn-danger btn-lg user2-bt-buffer", data: { confirm: "Are you sure?" }, method: :delete %>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- Breadcrumb Area Start -->
<div class="section breadcrumb-area bg-name-bright">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <div class="breadcrumb-wrapper">
                    <h2 class="breadcrumb-title">Create Account</h2>
                    <ul class="align-items-end">
                        <li><%= link_to 'Home', root_path%></li>
                        <li>Registration</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Area End -->

<!-- Register Section Start -->
<div class="section section-margin">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-8 m-auto">
                <div class="login-wrapper">
                  <%# title %>
                    <div class="section-content text-center m-b-30">
                        <h2 class="title m-b-10">Join the YouPet Family</h2>
                    </div>
                     <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <%= render "users/shared/error_messages", resource: resource %>
                        <div class="mb-3">
                            <label  class="form-label">Username</label>
                            <%= f.text_field :username, class: "form-control", autofocus: true, autocomplete: "username"%>
                        </div>
                        <div class="mb-3">
                          <label class="form-label">Avatar</label>
                          <%= f.file_field :avatar, class: "form-control", autocomplete: "avatar" %>
                          <% if resource.avatar.attached? %>
                            <%= image_tag resource.avatar, class: "avatar" %>
                          <% end %>
                        </div>
                        <div class= "row">
                          <div class="mb-3 col-md-7">
                            <label class="form-label">Email</label>
                            <%= f.email_field :email, class: "form-control", autocomplete: "email" %>
                          </div>
                          <div class="mb-3 col-md-5">
                            <label class="form-label">Phone</label>
                            <%= f.phone_field :phone, class: "form-control", autocomplete: "phone" %>
                          </div>
                        </div>
                        <div class="mb-3">
                          <label class="form-label">Password</label>
                          <% if @minimum_password_length %>
                          <em>(<%= @minimum_password_length %> characters minimum)</em>
                          <% end %><br />
                          <%= f.password_field :password,  class: "form-control", autocomplete: "new-password" %>
                          </div>
                        <div class="mb-3">
                          <label class="form-label">Password confirmation</label>
                          <%= f.password_field :password_confirmation,  class: "form-control", autocomplete: "new-password" %>
                        </div>
                        <div class="mb-3">
                          <div class="row">
                            <div class="col-12 d-flex justify-content-center ">
                              <%= f.submit "Register", class: "btn btn-primary btn-lg user-bt-buffer"%>
                            </div>
                          </div>
                        </div>
                        <% end %>
                      <%= render "users/shared/links" %>
                </div>
            </div>
        </div>
    </div>
</div>
 

      

<%= form_with(model: [@post, @post.orders.build ], local: true) do |form| %>
  <div class="mb-3">
    <label class="form-label">Order Detail</label>
    <%= form.text_area :body, class: "form-control", row:"4", placeholder: "Give your best offer!"%>
  </div>
  <div class="action">
    <%= button_tag type: 'submit', class: "btn btn-dark" do %>
    <i class="fas fa-file-invoice" aria-hidden="true"></i> 
    <span>Place Order
    </span> 
    <% end %>
  </div>
<% end %>
